$slider-width = 108px
$button-height = 35px

.slider
	position absolute
	top 86%
	right 14.05%
	padding-top 60px
	width $slider-width
	transition transform .5s ease
	will-change transform
	cursor pointer

	&:before
		position absolute
		bottom -46px
		left 0
		padding-top 26px
		width 100%
		content attr(data-text)
		hel-neue-l()
		font-size 10px
		color #dca251
		text-align center
		opacity 0
		transition opacity .5s ease .5s
		will-change opacity

	&:hover
		transform translateY(-440px) !important

		&:before
			opacity .55

		.slider__btn
			top 0
			opacity 1
			visibility visible
			transition-delay .5s
			transition-duration .2s, 0s

			&:active
				top 1px
				height $button-height - 1px

		& .slider__item
			position static !important
			visibility visible
			opacity 1
			transition-delay 0s, 0s, .5s

			& + .slider__item
				margin-top 19px !important

	&__item
		top 0
		left 0
		width 100%
		height 60px
		text-align center
		visibility hidden
		opacity 0
		transition visibility 0s linear .5s, opacity .2s ease .2s, display 0s linear .5s
		will-change opacity, visibility

		& + &
			margin-top 19px

		&_state_active
			margin 0 !important
			position absolute
			z-index 2
			opacity 1
			visibility visible

	&__logo

		&_event
			padding 16px 0 17px

			a
				sprite($slide_event)

		&_grebennicov

			a
				sprite($slide_grebennicov)

		&_eventforum
			padding 6px 0 7px

			a
				sprite($slide_eventforum)

		&_gelios
			padding 10px 0

			a
				sprite($slide_gelios)

		&_wedding
			padding 6px 0

			a
				sprite($slide_wedding)

		a
			display inline-block

	&__btn
		position absolute
		z-index 1
		top -45px
		left 0
		size(100%, $button-height)
		pfdin-r()
		font-size 11px
		line-height 26px
		letter-spacing 1px
		text-transform uppercase
		text-align center
		border 2px solid $button-color
		border-radius 3%/50%
		color $button-color
		cursor pointer
		no-select()
		opacity 0
		visibility hidden
		transition opacity .5s ease, visibility 0s linear .5s
		will-change opacity

		&:before
			position absolute
			top -2px
			left -2px
			size(($slider-width - 4px), ($button-height - 9px))
			content ''
			border 2px solid $button-color
			border-radius 3%/50%
