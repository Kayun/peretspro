		.menu__item.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Заявка"
			role="menuitem"
			)
			span.menu__round

		.menu__item.menu__item_state_active.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Закрытая зона сайта"
			role="menuitem"
			)
			span.menu__round.menu__round_static
