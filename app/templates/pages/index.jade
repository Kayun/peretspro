extends ../layouts/default

block head
	- pageTitle = 'Perets.pro';
	style.
		.bg {
			position: absolute;
			width: 100%;
			height: 100%;
			opacity: .08;
			background-position: 50% 50%;
			background-repeat: no-repeat;
			background-image: url('assets/images/bg.jpg');
		}

block content
