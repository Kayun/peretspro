extends ../layouts/default

block head
	- pageTitle = 'Perets.pro';
	style.
		.bg {
			position: absolute;
			width: 100%;
			height: 100%;
			opacity: .08;
			background-position: 50% 50%;
			background-repeat: no-repeat;
			background-image: url('assets/images/bg.jpg');
		}

block content
	.bg

	include ../blocks/wrapper

	nav.menu.items.items_left_200.js-items(role="menu" data-num=2)
		.menu__item.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Главный экран"
			role="menuitem"
			)
			span.menu__round

		.menu__item.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Видео о проекте" role="menuitem"
			)
			span.menu__round

		.menu__item.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Обращение организаторов"
			role="menuitem"
			)
			span.menu__round

		.menu__item.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Заявка"
			role="menuitem"
			)
			span.menu__round

		.menu__item.menu__item_state_active.js-menu-item(
			onclick="app.menuToggle(event.currenTarget)"
			data-text="Закрытая зона сайта"
			role="menuitem"
			)
			span.menu__round.menu__round_static
			span.menu__lock

	.music.items.items_right_200.js-items(data-num=9)
		- for (var i = 0; i < 16; i++)
